{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"files": {
		"ignore": ["node_modules", "dist", ".gitignore", "pnpm-lock.yaml", "bun.lockb"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error",
				"noUnusedVariables": "warn",
				"useHookAtTopLevel": "error"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useImportType": "off",
				"useNodejsImportProtocol": "off",
				"useSelfClosingElements": "off",
				"useTemplate": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "warn"
			},
			"a11y": {
				"useMediaCaption": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma": "none"
		}
	}
}
